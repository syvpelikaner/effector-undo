{
  "compilerOptions": {
    "target": "ESNext", // Modern JS features
    "module": "ESNext", // Generate ESM
    "declaration": true, // Generate type definitions
    "outDir": "./dist", // Output directory
    "strict": true, // Strict type-checking
    "esModuleInterop": true, // Interop with CommonJS modules
    "moduleResolution": "Node", // Resolve modules in Node.js style
    "skipLibCheck": true // Skip type checks for dependency declarations
  },
  "include": ["src"]
}
